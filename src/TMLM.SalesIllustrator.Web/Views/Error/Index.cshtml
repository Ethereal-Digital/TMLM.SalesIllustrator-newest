@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Error Occured</title>
    <!-- favicon -->
    <link rel="apple-touch-icon-precomposed" href="template/images/favicon/favicon-tm.ico" />
    <link rel="icon" type="image/png" href="template/images/favicon/favicon-tm.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        /*https://stackoverflow.com/questions/42187838/how-to-vertically-center-a-div-on-page*/
        .parent {
            position: relative;
            left: 0;
            top: 0;
            width: 100vw;
            height: 60vh;
        }

        .child {
            position: absolute;
            left: 50%;
            top: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            width: 30%;
            height: 30%;
        }

        .child-2 {
            position: absolute;
            left: 50%;
            top: 85%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            width: 100%;
            height: 30%;
            font-family: Cambria;
            font-size: 20px;
        }

        .test {
            font-family: Cambria;
            font-size: 50px;
        }

        body {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class=parent>
        <img class="child" src="~/img/logo-tkm.svg"/>
        <div align="center" class="child-2"><p class="test">WE ARE SORRY.</p> <br>It seems that we have encountered an unexpected error.</div>
    </div>
</body>
</html>


